{
  "name": "pagespace-posts",
  "version": "1.0.2",
  "description": "Useful for creating blogs and newsfeeds from pages",
  "main": "index.js",
  "scripts": {
    "start": "node standalone",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Phil Mander",
  "license": "MIT",
  "devDependencies": {
    "body-parser": "^1.13.3",
    "express": "^4.13.3",
    "express-handlebars": "^2.0.1",
    "serve-favicon": "^2.3.0"
  },
  "peerDependencies": {

  },
  "dependencies": {
    "bluebird": "^2.9.34",
    "mongoose": "~4.1.5"
  },
  "keywords" : [ "pagespace-plugin" ],
  "pagespace" : {
      "schema" : [{
          "name" : "root",
          "type" : "page",
          "default" : null,
          "title" : "Root page",
          "description" : "Blog posts will be aggregated from child pages of this page",
          "required" : true
      }, {
          "name" : "regionName",
          "title" : "Aggregate from region",
          "type" : "string",
          "default" : null
      }, {
          "name" : "emptyMessageHtml",
          "title" : "No Posts HTML",
          "default" : "<!-- There are no items to display -->",
          "type" : "string"
      }, {
          "name" : "wrapperClass",
          "title" : "CSS Class",
          "default" : "pagespace-posts",
          "type" : "string"
      }, {
          "name" : "expiry",
          "title" : "Expiry date",
          "default" : -1,
          "type" : "date"
      }]
  }
}
